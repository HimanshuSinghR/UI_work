<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">


        <shape>

            <stroke android:width="4dp"
                android:color="#0000FF"/>
            <gradient android:startColor="#ffff"
                android:centerColor="#ffff"
                android:centerY="1.0"
                android:endColor="#ffff"
                android:angle="270"/>
            <corners android:radius="100dp"/>

        </shape>
    </item>
    <!--    Define the background properties like start color, and end color etc-->
    <item android:id="@android:id/progress"
        android:top="9dp"
        android:bottom="9dp"
        android:left="9dp"
        android:right="9dp">
        <!--        <android:paddingtop="2dp"/>-->

        <clip>
            <shape>
                <gradient android:startColor="#4995ff"
                    android:centerColor="#4995ff"
                    android:centerY="1.0"
                    android:endColor="#4995ff"
                    android:angle="270"/>
                <corners android:radius="100dp"></corners>


            </shape>
        </clip>
    </item>

</layer-list>